<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flotage_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_group_item_height"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@android:id/content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@android:id/icon"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textAppearance="@android:style/TextAppearance" />

    <ToggleButton
        android:id="@+id/expandable_toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@android:id/content"
        android:background="@drawable/list_group_item_indicaotr"
        android:focusable="false"
        android:textOff="@string/empty_string"
        android:textOn="@string/empty_string" />

</RelativeLayout>